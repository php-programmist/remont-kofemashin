<div class="cofe_block">
    <div class="container">
       <h2 class="zag1">Элитный кофе для кофемашин по супер ценам:</h2>
        <div class="products js-products-slider">
            {% for item in items %}
                    <div class="product">
                        <a href="{{ path('cofe',{slug: item.slug }) }}">
                            <div class="product__image_wrapper">
                                <img src="{{ asset('img/cofe/'~item.image) }}" alt="{{ item.name }}">
                            </div>
                        </a>
                        <div class="product__name">
                            <a href="{{ path('cofe',{slug: item.slug }) }}" target="_blank">{{ item.name }}</a>
                        </div>
                        <div class="product__price">
                              {{ item.price }} ₽/КГ
                        </div>
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-success zakzv-btn">Заказать</button>
                        </div>
                </div>
            {% endfor %}

        </div>
    </div>
</div>